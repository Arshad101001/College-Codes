<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	
	<bean id="customer" class="com.aop.CustomerService" />
	<bean id="logging" class="com.aop.LoggingAspect" />
	
	<aop:config>	<!-- configuring AOP -->
		<aop:aspect ref="logging">	<!-- loading aspect (it will run each and every time when methods inside aop:pointcut execution run -->
			
			<!-- here (execution means to execute, * means all/any return type, com.aop.CustomerService is a class, * means all/any method of the class, (..) any parameterize method  -->
			<aop:pointcut expression="execution(* com.aop.CustomerService.*(..))" id="serviceMethods"/> <!-- any method of class CustomerService  -->
			
			
			<!-- after method -->
			<aop:after method="afterAdvice" pointcut-ref="serviceMethods"/>  <!-- it will trigger and execute after execution of any methods inside aop:pointcut -->
		</aop:aspect>
	</aop:config>

</beans>
