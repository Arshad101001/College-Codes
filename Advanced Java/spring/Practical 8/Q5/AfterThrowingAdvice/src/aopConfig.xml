<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Registering the PaymentService class as a Spring Bean -->
	<bean id="paymentService" class="com.aop.PaymentService" />
	
	<!-- Registering the Aspect class that contains our after-throwing advice -->
	<bean id="exceptionAspect" class="com.aop.ExceptionAspect" />
	
	<!-- Spring AOP Setup -->
	<aop:config>
	
		<!-- Linking the aspect class -->
		<aop:aspect ref="exceptionAspect">
			
			<!-- Define the pointcut:
                 This tells Spring which method we want to apply AOP to.
                 Here: we apply to all method inside PaymentService class.
            -->
			<aop:pointcut expression="execution(* com.aop.PaymentService.*(..))" id="paymentMethods"/>
			
			
			<!-- AFTER THROWING advice:
                 This runs ONLY when the target method throws an exception.
                 'method' → advice method to call (logException)
                 'pointcut-ref' → the method to watch (paymentPoint)
                 'throwing' → captures the thrown exception into 'ex'
            -->
			<aop:after-throwing method="logException" pointcut-ref="paymentMethods" throwing="ex" />
		</aop:aspect>
	</aop:config>

</beans>
