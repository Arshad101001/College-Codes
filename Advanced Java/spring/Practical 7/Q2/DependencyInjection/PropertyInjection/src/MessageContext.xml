<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!--  Property Injection -->
	<!-- id represents objects & class represents classes under package -->
	<bean id="morningBean" class="com.setterInjection.MessageBean" >
		<property name="message" value="Good Morning!!" />
	</bean>
	
	<!-- using same bean for different value -->
	<bean id="afternoonBean" class="com.setterInjection.MessageBean" >
		<property name="message" value="Good Afternoon!!" />
	</bean>

</beans>
