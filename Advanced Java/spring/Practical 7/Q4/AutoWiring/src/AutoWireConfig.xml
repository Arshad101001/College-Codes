<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Injecting values to bean -->
	<bean id="address" class="com.AutoWiring.Address">
		<property name="city" value="Mumbai" />
		<property name="state" value="Maharashtra" />
	</bean>
	
	<!-- Auto injecting in student class by using the name, it takes the name from above id and search it for the same in student class if it matches it will assign it by using setter method -->
	<bean id="s1" class="com.AutoWiring.Student" autowire="byName" />
	
	<!-- Auto injecting in student class by using the type, it takes the class name from above and search it for the same in student class if it matches it will assign it by using setter method -->
	<bean id="s2" class="com.AutoWiring.Student" autowire="byType" />
	
	<!-- Auto injecting in student class by using the constructor, it takes the class name from above and search the constructor with same type in student class if it matches it will call it and assign it -->
	<bean id="s3" class="com.AutoWiring.Student" autowire="constructor" />

</beans>
